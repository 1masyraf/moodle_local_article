<style>
    * {
      box-sizing: border-box;
    }
    
    /* Create two equal columns that floats next to each other */
    .inrow {
      float: right;
      width: 45%;
      padding: 15px;
    }
    
    /* Clear floats after the columns */
    .row:after {
      content: "";
      display: table;
      clear: both;
    }
</style>

<h1>Article List</h1>

<input type="button" class="btn btn-secondary" value="Create new Article" onclick="location.href='{{base_url}}/local/article/add.php'">
<hr>
<div class="row">
  {{#articles}}
  <div class="inrow">
    <div class="card border-dark mb-3">
      <div class="card-body">
        <img class="card-img-top" src= "{{article_img}}" style="height: 180px;" alt="Card image cap">
        <h5 class="card-title">{{article_title}}</h5>
        <p class="card-text">{{{article_desc}}}</p>
        <a href="{{base_url}}/local/article/view.php?id={{id}}" class="btn btn-primary">Read More</a>
      </div>
    </div>
  </div>
  {{/articles}}
</div>



